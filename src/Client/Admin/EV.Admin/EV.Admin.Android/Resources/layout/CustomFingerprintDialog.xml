<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:paddingTop="25dp"
    android:paddingBottom="25dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">
    <ImageView
        android:id="@+id/fingerprint_imgFingerprint"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/icon_finger_orange" />
    <TextView
        android:id="@+id/fingerprint_txtHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="4dp"
        android:visibility="gone" />
    <TextView
        android:id="@+id/fingerprint_txtReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#000000"
        android:gravity="center_horizontal"
        android:paddingBottom="20dp" 
        android:paddingTop="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:gravity="center"
        style="?android:attr/buttonBarStyle">

        <Button
            android:id="@+id/fingerprint_btnCancel"
            android:background="#EAA200"
            android:text="ยกเลิก"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:textColor="@android:color/white"/>
    </LinearLayout>
</LinearLayout>